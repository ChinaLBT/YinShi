/* pages/addwrite/addwrite.wxss */
.all {
  position: fixed;
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
}

.poetry_img {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.title {
  flex-direction: center;
  display: flex;
  text-align: center;
}

.zuo {
  flex-direction: center;
  display: flex;
  width: 300rpx;
  margin-top: 10rpx;
}

.zuo input {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.tishi {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: red;
  opacity: 0.6;
}

.font {
  padding: 10rpx;
  border: 2rpx solid #000;
  border-radius: 20rpx;
}

.font textarea {
  height: 800rpx;
}

.yulan {
  margin-top: 50rpx;
  border: 1rpx solid #000;
  padding: 20rpx;
  width: 300rpx;
  text-align: center;
  border-radius: 20rpx;
}