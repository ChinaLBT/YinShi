/* pages/create/create.wxss */
.all {
  background-attachment: fixed;
  position: fixed;
  width: 100%;
  height: 100%;
}

.index_img {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.input_all {
  z-index: 1;
  flex-direction: column;
  display: flex;
  align-items: center;
  margin-top: 100rpx;
}

.input {
  z-index: 2;
  color: #000;
  width: 400rpx;
  border: 1px solid #000;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 10rpx;
  margin: 10rpx;

}

.input input {
  margin-left: 60rpx;
}

.input picker {
  margin-left: 60rpx;
}

.input label {
  font-size: 22rpx;
  margin-left: 20rpx;
}

.tijiao {
  background: #fff;
  margin-top: 50rpx;
  border: 2rpx solid #000;
  border-radius: 50rpx;
  padding: 20rpx;
  width: 300rpx;
  font-size: 16pt;
  text-align: center;
  opacity: 0.6;
}

.shang {
  position: fixed;
  width: 700rpx;
  height: 800rpx;
  background: #000;
  opacity: 0.8;
  border-radius: 20rpx;
}

.font {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.shang image {
  margin-left: 100rpx;
  margin-top: 50rpx;
  width: 500rpx;
}

.other {
  flex-direction: row;
  display: flex;
  align-items: center;
  margin-top: 80rpx;
}

.lx {
  margin: 0 100rpx;
  height: 75rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  padding: 0 10rpx;
  opacity: 0.3;
  color: #fff;
  background: #000;
  line-height: 80rpx;
}